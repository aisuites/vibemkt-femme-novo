# IAMKT - VARIÁVEIS DE AMBIENTE - EXEMPLO
# Copie este arquivo para .env.development e preencha os valores

ENVIRONMENT=development
DEBUG=True
DJANGO_LOG_LEVEL=DEBUG

# DATABASE
DATABASE_URL=postgresql://iamkt_user:your_password@iamkt_postgres:5432/iamkt_db
DB_CONN_MAX_AGE=600
DB_MAX_CONNECTIONS=5

# REDIS & CELERY
REDIS_URL=redis://iamkt_redis:6379/1
CELERY_BROKER_URL=redis://iamkt_redis:6379/2
CELERY_RESULT_BACKEND=redis://iamkt_redis:6379/3
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=America/Fortaleza

# DJANGO SECURITY
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com
CORS_ALLOW_ALL_ORIGINS=True
SITE_URL=https://iamkt.aisuites.com.br

# DJANGO SETTINGS
DJANGO_SETTINGS_MODULE=sistema.settings.development
USE_DOCKER_VOLUME_CACHE=True
AUTO_COLLECTSTATIC=True

# DOCKER
DOCKER_PROFILE=solo
FILE_UPLOAD_MAX_MEMORY_SIZE=104857600
DATA_UPLOAD_MAX_MEMORY_SIZE=104857600

# AI INTEGRATIONS
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL_TEXT=gpt-4
OPENAI_MODEL_IMAGE=dall-e-3

GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL_TEXT=gemini-pro
GEMINI_MODEL_IMAGE=gemini-pro-vision

PERPLEXITY_API_KEY=your-perplexity-api-key
PERPLEXITY_MODEL=pplx-7b-online

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=iamkt-assets-dev
AWS_S3_REGION_NAME=us-east-1

# CACHE & LIMITS
IA_CACHE_TTL=2592000
DEFAULT_MONTHLY_GENERATION_LIMIT=100
DEFAULT_MONTHLY_COST_LIMIT=100.00

# EMAIL CONFIGURATION
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_SSL=False
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@iamkt.com.br

# EMAIL NOTIFICATION GROUPS
# Gestão: Recebe notificações estratégicas e aprovações
NOTIFICATION_EMAILS_GESTAO=gestao@iamkt.com,admin@iamkt.com

# Operação: Recebe notificações de novos cadastros e operacionais
NOTIFICATION_EMAILS_OPERACAO=operacao@iamkt.com,suporte@iamkt.com

# Posts: Recebe notificações sobre posts criados
NOTIFICATION_EMAILS_POSTS=posts@iamkt.com,conteudo@iamkt.com

# Novos Usuários: Recebe notificações de novos cadastros (compatibilidade com app antiga)
NEWUSER_NOTIFICATION_EMAILS=operacao@iamkt.com,suporte@iamkt.com
